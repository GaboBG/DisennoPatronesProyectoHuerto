<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controller.ClienteFXController">

    <left>
        <VBox spacing="10" style="-fx-background-color: #2c3e50;" prefWidth="220">
            <padding><Insets top="15" left="10" right="10" bottom="10"/></padding>

            <Label text="Menú Principal"
                   style="-fx-font-size: 16px; -fx-text-fill: white; -fx-font-weight: bold;" />

            <!-- Botón Mi Perfil -->
            <Button text="Mi Perfil" onAction="#mostrarPerfil"
                    style="-fx-background-color: #2c3e50; -fx-text-fill: white;" />

            <!-- Otras secciones del cliente -->
            <Button text="Cultivos" fx:id="btnCultivos" onAction="#mostrarCultivos"
                    style="-fx-background-color: transparent; -fx-text-fill: white;" />

            <Button text="Actividades" fx:id="btnActividades" onAction="#mostrarActividades"
                    style="-fx-background-color: transparent; -fx-text-fill: white;" />

            <Button text="Recomendaciones" fx:id="btnRecomendaciones" onAction="#mostrarRecomendaciones"
                    style="-fx-background-color: transparent; -fx-text-fill: white;" />

            <Button text="Reportes" fx:id="btnReportes" onAction="#mostrarReportes"
                    style="-fx-background-color: transparent; -fx-text-fill: white;" />
            <Button text="Cerrar Sesión" onAction="#cerrarSesion"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" />
        </VBox>
    </left>

    <center>
        <VBox fx:id="contentArea" spacing="10">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
            <Label text="Bienvenido al Panel del Cliente"
                   style="-fx-font-size: 18px;" />
        </VBox>
    </center>
</BorderPane>
