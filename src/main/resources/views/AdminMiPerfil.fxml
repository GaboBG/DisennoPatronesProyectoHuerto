<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.EditarPerfilAdminFXController"
      spacing="10" padding="20">

    <Label text="Editar Perfil" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Nombre:"/>
    <TextField fx:id="nombreField"/>

    <Label text="Primer Apellido:"/>
    <TextField fx:id="apellido1Field"/>

    <Label text="Segundo Apellido:"/>
    <TextField fx:id="apellido2Field"/>

    <Label text="Correo:"/>
    <TextField fx:id="correoField" editable="false"/>

    <Label text="Fecha de Nacimiento:"/>
    <DatePicker fx:id="fechaNacimientoPicker"/>

    <Label text="Estado:"/>
    <CheckBox fx:id="estadoCheckbox" text="Activo"/>

    <HBox spacing="10">
        <Button text="Guardar Cambios" onAction="#guardarCambios"/>

    </HBox>

    <Label fx:id="mensajeLabel" style="-fx-text-fill: red;"/>
</VBox>
